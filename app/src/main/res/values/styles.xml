    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Preference -->
    <style name="PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:windowBackground">@color/primaryColor</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonAppTheme">
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonAppTheme2">
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonAppTheme3">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColor">#FF4081</item>
    </style>

    <!-- Text Styles -->
    <style name="LightText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="DarkText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="ViewTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextViewRiderz">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CardViewRiderz">
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">@color/colorSurface</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

</resources>
